{
  "name": "scryptsy",
  "version": "1.2.1",
  "description": "Pure JavaScript implementation of the scrypt key deriviation function that is fully compatible with Node.js and the browser.",
  "main": "lib/scrypt.js",
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "coveralls": "^2.10.0",
    "istanbul": "^0.3.5",
    "mocha": "^2.2.0",
    "mochify": "^2.1.0",
    "standard": "^3.2.0"
  },
  "dependencies": {
    "pbkdf2": "^3.0.3"
  },
  "repository": {
    "url": "git@github.com:cryptocoinjs/scryptsy.git",
    "type": "git"
  },
  "keywords": [
    "crytpo",
    "cryptography",
    "scrypt",
    "kdf",
    "litecoin",
    "dogecoin",
    "bitcoin",
    "bip38"
  ],
  "scripts": {
    "test": "mocha --ui bdd",
    "unit": "./node_modules/.bin/mocha",
    "coverage": "./node_modules/.bin/istanbul cover ./node_modules/.bin/_mocha -- --reporter list test/*.js",
    "coveralls": "npm run-script coverage && node ./node_modules/.bin/coveralls < coverage/lcov.info",
    "browser-test": "./node_modules/.bin/mochify --wd -R spec",
    "standard": "standard"
  },
  "react-native": {
    "crypto": "react-native-crypto",
    "_stream_transform": "readable-stream/transform",
    "_stream_readable": "readable-stream/readable",
    "_stream_writable": "readable-stream/writable",
    "_stream_duplex": "readable-stream/duplex",
    "_stream_passthrough": "readable-stream/passthrough",
    "stream": "stream-browserify",
    "vm": "vm-browserify"
  },
  "browser": {
    "crypto": "react-native-crypto",
    "_stream_transform": "readable-stream/transform",
    "_stream_readable": "readable-stream/readable",
    "_stream_writable": "readable-stream/writable",
    "_stream_duplex": "readable-stream/duplex",
    "_stream_passthrough": "readable-stream/passthrough",
    "stream": "stream-browserify",
    "vm": "vm-browserify"
  }
}